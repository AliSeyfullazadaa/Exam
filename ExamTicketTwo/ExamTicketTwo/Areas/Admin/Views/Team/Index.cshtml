@model List<TeamMember>

@{
    ViewData["Title"] = "Team";
}

<div class="container">


    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Bordered table</h4>
                <a class="btn btn-success sm-2" asp-action="Create">
                    <i class="mdi mdi-table-edit"></i>
                </a>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Id
                                </th>

                                <th>
                                    Image
                                </th>
                                <th>
                                    FullName
                                </th>
                                <th>
                                    Profession
                                </th>
                                <th>
                                    FacebookUrl
                                </th>
                                <th>
                                    TwitterUrl
                                </th>
                                <th>
                                    InstagramUrl
                                </th>
                                <th>
                                    LinkedInUrl
                                </th>
                                <th>
                                    Setting
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (TeamMember teamMember in Model)
                            {
                                <tr>
                                    <td>
                                        @teamMember.Id
                                    </td>
                                    <td class="py-1">
                                        <img src="~/assets/img/team/@teamMember.ImageUrl" alt="image" />
                                    </td>
                                    <td>
                                        @teamMember.FullName
                                    </td>
                                    <td>
                                        @teamMember.Profession
                                    </td>
                                    <td>
                                        @teamMember.FacebookUrl
                                    </td>
                                    <td>
                                        @teamMember.TwitterUrl
                                    </td>
                                    <td>
                                        @teamMember.InstagramUrl
                                    </td>
                                    <td>
                                        @teamMember.LinkedinUrl
                                    </td>
                                    <td>
                                        <a class="btn btn-warning sm-2" asp-action="Update" asp-route-id="@teamMember.Id">
                                            <i class="mdi mdi-account-edit"></i>
                                        </a>
                                        <a class="btn btn-danger sm-2" asp-action="Delete" asp-route-id="@teamMember.Id">
                                            <i class="mdi mdi-delete"></i>
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    </div>